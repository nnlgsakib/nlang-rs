// Loops - While, Break, and Continue
// This demonstrates loop structures and control statements

def main() {
    println("=== Loop Examples ===");
    
    // Simple while loop
    println("Counting from 1 to 5:");
    store counter = 1;
    while (counter <= 5) {
        print("Count: ");
        println(counter);
        counter = counter + 1;
    }
    
    println("");
    
    // While loop with break
    println("Loop with break (stops at 3):");
    store i = 1;
    while (i <= 10) {
        if (i == 3) {
            println("Breaking at 3!");
            break;
        }
        print("i = ");
        println(i);
        i = i + 1;
    }
    
    println("");
    
    // While loop with continue
    println("Loop with continue (skips even numbers):");
    store j = 0;
    while (j < 8) {
        j = j + 1;
        if (j % 2 == 0) {
            continue;
        }
        print("Odd number: ");
        println(j);
    }
    
    println("");
    
    // Nested loops
    println("Nested loops (multiplication table 1-3):");
    store outer = 1;
    while (outer <= 3) {
        store inner = 1;
        while (inner <= 3) {
            store result = outer * inner;
            print(outer);
            print(" x ");
            print(inner);
            print(" = ");
            println(result);
            inner = inner + 1;
        }
        outer = outer + 1;
    }
    
    println("");
    
    // Countdown example
    println("Countdown from 5:");
    store countdown = 5;
    while (countdown > 0) {
        println(countdown);
        countdown = countdown - 1;
    }
    println("Blast off!");
}